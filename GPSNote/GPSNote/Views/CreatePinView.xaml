<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:controls="clr-namespace:GPSNote.Controls" 
             xmlns:maps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="GPSNote.Views.CreatePinView"
             Title="{Binding Title}">
             <!--xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"-->
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"
                     Command="{Binding SaveCommand}"/>
        <ToolbarItem Text="Cancel"
                     Command="{Binding CancelCommand}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Name:"
                   FontSize="20"
                   Margin="20, 0"/>

            <Entry Placeholder="Name"
                   Text="{Binding Name}"
                   FontSize="20"/>

            <Label Text="Description:"
                   FontSize="20"
                   Margin="20, 0"/>

            <Entry Placeholder="Description"
                   Text="{Binding Description}"
                   FontSize="20"/>

            <Label Text="Position:"
                   FontSize="20"
                   Margin="20, 0"/>

            <Entry Placeholder="Position"
                   Text="{Binding Position}"
                   FontSize="20"/>

            <controls:BindMap IsShowingUser="True"
                              IsTrafficEnabled="True"
                              MapType="Street"
                              SelectedItem="{Binding SelectedItem}"
                              ClickPosition="{Binding SelectedPosition}"
                              ItemsSource="{Binding PinsList}">

                <maps:Map.ItemTemplate>
                    <DataTemplate >

                        
                        <!--<maps:Pin Position="{Binding Position}"
                                 Address="{Binding Address}"
                                 Label="{Binding Description}"
                                 Icon="{Binding IconNumber, Converter={StaticResource iconConverter}}"/>-->
                        
                    </DataTemplate>
                </maps:Map.ItemTemplate>
                
            </controls:BindMap>

            
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>