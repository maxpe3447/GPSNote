<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism ="http://prismlibrary.com" 
             xmlns:controls="clr-namespace:GPSNote.Controls"
             prism:ViewModelLocator.AutowireViewModel="true"
             x:Class="GPSNote.Views.CreateAnAccountView">

    <ContentPage.Resources>
        <Color x:Key="BaseColor">#596EFB</Color>
        <Color x:Key="TextColor">#1E242B</Color>
        <Color x:Key="LabelColor">#3D4E61</Color>
        <Color x:Key="PlaceholderColor">#858E9E</Color>
        <Color x:Key="StrokeColor">#D7DDE8</Color>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>

            <!--HEADER-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <!--LABEL LOG IN-->
                <Label Text="{Binding TextResources[CreateAnAccount]}"
                       Grid.Row="0"
                       TextColor = "{StaticResource TextColor}"
                       FontSize="24"
                       FontFamily="Montserrat"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--BUTTON BACK-->
                    <Button ImageSource="ic_left_blue.png"
                            Grid.Row="0" Grid.Column="0"
                            BackgroundColor="Transparent"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            Command="{Binding BackCommand}"/>

                </Grid>
            </Grid>

            <Label Text="{Binding TextResources[Name]}"
                   TextColor="{StaticResource LabelColor}"
                   Margin="30, 20, 10, 0"
                   FontSize="18"/>

            <controls:CancelLine Placeholder="{Binding TextResources[EnterName]}"
                                 Margin="30, 0, 30,0"
                                 FontSize="18"
                                 Text="{Binding UserName}"
                                 BorderColor ="{StaticResource StrokeColor}"
                                 TextColor="{StaticResource TextColor}"/>

            <Label Text="{Binding TextResources[Email]}"
                   Margin="30, 10, 10,0"
                   TextColor="{StaticResource LabelColor}"
                   FontSize="18"/>

            <controls:CancelLine Placeholder="{Binding TextResources[EnterEmail]}"
                                 Margin="30, 0, 30,30"
                                 TextColor="{StaticResource TextColor}"
                                 BorderColor ="{StaticResource StrokeColor}"
                                 FontSize="18"
                                 Text="{Binding UserEmail}"/>

            <!--BUTTON NEXT-->
            <Button Text="{Binding TextResources[Next]}"
                    FontSize="14"
                    Margin="16, 0, 16, 0"
                    BackgroundColor="{StaticResource BaseColor }"
                    TextColor="White"
                    Command="{Binding SigninCommand}"
                    FontFamily="Montserrat"/>

            <!--SEPARATOR-->
            <Grid Margin="0, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--LINE RIGHT-->
                <Line Grid.Column="0"
                      X2="1000"
                      Stroke="{StaticResource StrokeColor}"
                      Margin="16, 10, 0, 0"/>

                <!--LINE LEFT-->
                <Line Grid.Column="2"
                      X2="1000"
                      Stroke="{StaticResource StrokeColor}"
                      Margin="5, 10, 16, 0"/>

                <!--LABEL OR-->
                <Label Text="{Binding TextResources[SeparatorOr]}"
                       Grid.Column ="1" 
                       HorizontalOptions="Center"
                       TextColor="{StaticResource StrokeColor}"/>
            </Grid>

            <!--BUTTON GOOGLE-->
            <Button BackgroundColor="White"
                    Margin="16, 0, 16, 0"
                    BorderColor="{StaticResource StrokeColor}" 
                    BorderWidth="1.5"
                    ImageSource="ic_google.png"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>