<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism ="http://prismlibrary.com" 
             xmlns:controls="clr-namespace:GPSNote.Controls"
             prism:ViewModelLocator.AutowireViewModel="true"
             x:Class="GPSNote.Views.CreateAnAccountView"
             Background="{StaticResource White}">

    <ContentPage.Content>
        <StackLayout>

            <!--HEADER-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <!--LABEL LOG IN-->
                <Label Text="{Binding TextResources[CreateAnAccount]}"
                       Grid.Row="0"
                       TextColor = "{StaticResource Black}"
                       FontSize="24"
                       FontFamily="{StaticResource MainFront}"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--BUTTON BACK-->
                    <Button ImageSource="{StaticResource ic_left_blue}"
                            Grid.Row="0" Grid.Column="0"
                            BackgroundColor="Transparent"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            Command="{Binding BackCommand}"/>

                </Grid>
            </Grid>

            <!--LABEL NAME-->
            <Label Text="{Binding TextResources[Name]}"
                   TextColor="{StaticResource DarkGray}"
                   FontFamily="{StaticResource MainFont}"
                   Margin="30, 20, 10, 0"
                   FontSize="18"/>

            <!--ENTRY ENTER NAME-->
            <controls:CancelLine Placeholder="{Binding TextResources[EnterName]}"
                                 Margin="28, 0, 30,0"
                                 FontSize="18"
                                 FontFamily="{StaticResource MainFont}"
                                 Text="{Binding UserName}"
                                 BorderColor ="{StaticResource LightGray}"
                                 TextColor="{StaticResource Black}"/>

            <!--LABEL EMAIL-->
            <Label Text="{Binding TextResources[Email]}"
                   FontFamily="{StaticResource MainFont}"
                   Margin="30, 10, 10,0"
                   TextColor="{StaticResource DarkGray}"
                   FontSize="18"/>

            
            <!--ENTRY ENTER EMAIL-->
            <controls:CancelLine Placeholder="{Binding TextResources[EnterEmail]}"
                                 Margin="28, 0, 30,30"
                                 TextColor="{StaticResource Black}"
                                 BorderColor ="{StaticResource LightGray}"
                                 FontSize="18"
                                 FontFamily="{StaticResource MainFont}"
                                 Text="{Binding UserEmail}"/>

            <!--BUTTON NEXT-->
            <Button Text="{Binding TextResources[Next]}"
                    FontSize="14"
                    Margin="16, 0, 16, 0"
                    BackgroundColor="{StaticResource LightBlue}"
                    TextColor="{StaticResource White}"
                    Command="{Binding NextCommand}"
                    FontFamily="{StaticResource MainFont}"
                    CornerRadius="1"/>

            <!--SEPARATOR-->
            <Grid Margin="0, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--LINE RIGHT-->
                <Line Grid.Column="0"
                      X2="1000"
                      Stroke="{StaticResource LightGray}"
                      Margin="16, 10, 0, 0"/>

                <!--LINE LEFT-->
                <Line Grid.Column="2"
                      X2="1000"
                      Stroke="{StaticResource LightGray}"
                      Margin="5, 10, 16, 0"/>

                <!--LABEL OR-->
                <Label Text="{Binding TextResources[SeparatorOr]}"
                       Grid.Column ="1" 
                       HorizontalOptions="Center"
                       FontFamily="{StaticResource MainFont}"
                       TextColor="{StaticResource LightGray}"/>
            </Grid>

            <!--BUTTON GOOGLE-->
            <Button BackgroundColor="{StaticResource White}"
                    Margin="16, 0, 16, 0"
                    BorderColor="{StaticResource LightGray}" 
                    BorderWidth="1.5"
                    ImageSource="{StaticResource ic_google}"
                    CornerRadius="1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>